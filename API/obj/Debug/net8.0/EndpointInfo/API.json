          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 1
            }
          },
          {
            "name": "pageSize",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Class groups retrieved successfully"
          }
        }
      },
      "post": {
        "tags": [
          "ClassGroup"
        ],
        "summary": "Create a new class group",
        "requestBody": {
          "description": "Class group data",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddUpdateClassGroupDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "201": {
            "description": "Class group created successfully"
          },
          "400": {
            "description": "Invalid input"
          }
        }
      }
    },
